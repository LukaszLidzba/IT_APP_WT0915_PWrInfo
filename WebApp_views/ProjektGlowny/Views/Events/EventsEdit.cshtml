@using ProjektGlowny.Models
@model EventsModel
@{
    ViewBag.Title = "Edycja wydarzenia";
    Layout = "~/Views/PWrInfo/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>
<div class="title-description">
    Tutaj możesz zmienić informacje o wydarzeniu.
</div>

<ol class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">Wydarzenia</a></li>
    <li class="active">Edycja</li>
</ol>

@using (Html.BeginForm("EventsEdit", "Events", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Id)<br />
        @Html.DisplayFor(m => m.Id, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.title)<br />
        @Html.TextBoxFor(m => m.title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.content)<br />
        @Html.TextAreaFor(m => m.content, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.departments)<br />
        @Html.DropDownListFor(m => m.selectedDepartmentId, new SelectList(Model.departmentsList, "Value", "Text"), new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.date)<br />
        @Html.TextBoxFor(m => m.date, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.notificationDate)<br />
        @Html.TextBoxFor(m => m.notificationDate, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UserId)<br />
        @Html.DisplayFor(m => m.UserId, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary btn-lg">Zmień</button>
}

<script>
    $(function () {
        $("#date").datetimepicker();
        $("#notificationDate").datetimepicker();
     });
</script>