@using ProjektGlowny.Models
@model UnitsModel
@{
    ViewBag.Title = "Dodaj jednostkę";
    Layout = "~/Views/PWrInfo/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>
<div class="title-description">
    Tutaj możesz dodać jednostkę.
</div>

<ol class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">Jednostki</a></li>
    <li class="active">Dodaj</li>
</ol>

@using (Html.BeginForm("UnitsAdd", "Units", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description)<br />
        @Html.TextAreaFor(m => m.Description, new { style = "width: 70%; height: 100px;" })
    </div>
    <button type="submit" class="btn btn-primary btn-lg">Zapisz dane</button>
    <button type="reset" class="btn btn-default btn-lg">Wyczyść</button>
}