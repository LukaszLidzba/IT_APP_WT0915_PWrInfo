@using ProjektGlowny.Models
@model Tuple<List<MessagesModel>,List<EventsModel>>  

@{
    ViewBag.Title = "Strona główna";
    Layout = "_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>
<div class="title-description">
    Witaj na stronie głownej systemu PWr Info&reg;. Z poziomu systemu możesz w łatwy sposób nim zarządzać.
</div>

<ol class="breadcrumb">
    <li class="active"><a href="#">Home</a></li>
</ol>

<div>
    <h2>
        <i class="fa fa-comments-o fa-2x md" aria-hidden="true"></i> Najnowsze wiadomości
    </h2>
</div>
<table class="table table-striped">
    <tr>
        <td>ID </td>
        <td>Treść</td>
        <td style="width: 20%;">Wydział</td>
    </tr>
   @foreach(var item in Model.Item1.Take(3))
   {
        <tr>
            <td>@Html.DisplayFor(turple => item.Id)</td>
            <td>@Html.DisplayFor(turple => item.content)</td>
            <td>@Html.DisplayFor(turple => item.departments.Name)</td>
        </tr>
    }
</table>

<div>
    <h2>
        <i class="fa fa-newspaper-o fa-2x md" aria-hidden="true"></i> Najnowsze wydarzenia
    </h2>
</div>
<table class="table table-striped">
    <tr>
        <td>ID </td>
        <td>Treść</td>
        <td style="width: 20%;">Wydział</td>
    </tr>
   @foreach (var item in Model.Item2.Take(3))
   {
        <tr>
            <td>@Html.DisplayFor(turple => item.Id)</td>
            <td>@Html.DisplayFor(turple => item.content)</td>
            <td>@Html.DisplayFor(turple => item.departments.Name)</td>
        </tr>
    }
</table>
