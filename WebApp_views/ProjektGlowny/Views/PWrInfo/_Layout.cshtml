<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    @*<meta name="viewport" content="width=device-width, initial-scale=1">*@
    <title>@ViewBag.Title - PWr Info</title>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Styles/PWrInfo/Styles.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/classAdder.js"></script>
    <script>
        var quantity = 12;

        function prepareCols(quantity) {
            for (var i = 0; i < quantity; i++) {
                $("body").prepend("<div class='kolumna' style='width: 1px; height: 100%; position: fixed; background-color: red; z-index: 999999'></div>");
            }
        }

        function drawCols(quantity) {
            var screenWidth = window.outerWidth,
                step = screenWidth / quantity,
                left = 0;

            $(".kolumna").each(function () {
                $(this).css("left", left);
                left += step - 1;
            });
        }

        function initColumn() {
            $(document).ready(function () {
                prepareCols(quantity);
                drawCols(quantity);
            });
        }
    </script>
</head>
<body>
    <div class="document-body">
        <aside>
            <ul>
                <li>
                    <a href="/PWrInfo/Index">
                        <i class="icon icon-main fa fa-desktop fa-3x" aria-hidden="true"></i>
                        <div class="description">Główna</div>
                    </a>
                </li>
                <li>
                    <a href="/PWrInfo/UserProfile">
                        <i class="icon icon-profile fa fa-pencil-square-o fa-3x" aria-hidden="true"></i>
                        <div class="description">Mój profil</div>
                    </a>
                </li>
                <li>
                    <a href="/PWrInfo/Messages">
                        <i class="icon icon-messages fa fa-comments-o fa-3x" aria-hidden="true"></i>
                        <div class="description">Wiadomości</div>
                    </a>
                </li>
                <li>
                    <a href="/PWrInfo/Events">
                        <i class="icon icon-events fa fa-newspaper-o fa-3x" aria-hidden="true"></i>
                        <div class="description">Wydarzenia</div>
                    </a>
                </li>
                <li>
                    <a href="/PWrInfo/Libraries">
                        <i class="icon icon-libraries fa fa-university fa-3x" aria-hidden="true"></i>
                        <div class="description">Biblioteki</div>
                    </a>
                </li>
                <li>
                    <a href="/PWrInfo/Users">
                        <i class="icon icon-users fa fa-users fa-3x" aria-hidden="true"></i>
                        <div class="description">Użytkownicy</div>
                    </a>
                </li>
            </ul>
        </aside>
        <main>
            @RenderBody()
            @*<footer>
                    <div class="footer-copy">
                        &copy; PWr Info <span id="demo"></span>
                    </div>
                    <div class="footer-rightText"> @DateTime.Now.ToLongDateString() - My ASP.NET Application</div>
                </footer>*@
        </main>
        <div class="loginbar">
            <div class="loginbar-description">Zalogowany jako: </div>
            <div class="loginbar-user">Username</div>
            <button type="button" class="btn btn-default loginbar-button">Wyloguj</button>
        </div>
    </div>


    <script>
        //initColumn();
        classAdder(480, 768, 1024, 1440);
        //$(window).resize(function () { drawCols(12); });
    </script>
</body>
</html>