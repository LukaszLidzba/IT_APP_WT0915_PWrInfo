@using ProjektGlowny.Models
@model LibrariesModel
@{
    ViewBag.Title = "Usuń bibliotekę";
    Layout = "~/Views/PWrInfo/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>
<div class="title-description">
    Tutaj możesz usunąć dane biblioteki.
</div>

<ol class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">Blblioteki</a></li>
    <li class="active">Usuń</li>
</ol>
    
    @using (Html.BeginForm("LibrariesDelete", "Libraries", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl }))
    {    @Html.HiddenFor(m => m.Name, new { @class = "form-control" })

        <div class="form-group">
            @Html.LabelFor(m => m.Id)<br />
            @Html.DisplayFor(m => m.Id, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name)<br />
            @Html.DisplayFor(m => m.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Address)<br />
            @Html.DisplayFor(m => m.Address, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.OpeningHours)<br />
            @Html.DisplayFor(m => m.OpeningHours, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.AdditionalInfo)<br />
            @Html.DisplayFor(m => m.AdditionalInfo, new { @class = "form-control" })
        </div>
        <div class="form-group">
        @Html.LabelFor(m => m.UserId)<br />
        @Html.DisplayFor(m => m.UserId, new { @class = "form-control" })
    </div>
        
        <button type="submit" class="btn btn-primary btn-lg">Usuń</button>
    }