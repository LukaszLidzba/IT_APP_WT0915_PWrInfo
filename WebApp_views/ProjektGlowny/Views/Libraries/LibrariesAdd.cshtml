@using ProjektGlowny.Models
@model LibrariesModel
@{
    ViewBag.Title = "Dodaj bibliotekę";
    Layout = "~/Views/PWrInfo/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>
<div class="title-description">
    Tutaj możesz dodać bibliotekę.
</div>

<ol class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">Blblioteki</a></li>
    <li class="active">Dodaj</li>
</ol>

@using (Html.BeginForm("LibrariesAdd", "Libraries", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl }))
{
     <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address)<br />
        @Html.TextAreaFor(m => m.Address, new { style = "width: 70%; height: 100px;" })
    </div>
    <div class="form-group">
       @Html.LabelFor(m => m.OpeningHours)<br />
        @Html.TextAreaFor(m => m.OpeningHours, new { style = "width: 70%; height: 100px;" })
    </div>
    <div class="form-group">
       @Html.LabelFor(m => m.AdditionalInfo)<br />
        @Html.TextAreaFor(m => m.AdditionalInfo, new { style = "width: 70%; height: 100px;" })
    </div>
    <button type="submit" class="btn btn-primary btn-lg">Zapisz dane</button>
    <button type="reset" class="btn btn-default btn-lg">Wyczyść</button>
}