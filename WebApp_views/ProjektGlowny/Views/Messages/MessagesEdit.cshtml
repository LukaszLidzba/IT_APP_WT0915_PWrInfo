@using ProjektGlowny.Models
@model MessagesModel
@{
    ViewBag.Title = "Edycja komunikatu";
    Layout = "~/Views/PWrInfo/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>
<div class="title-description">
    Tutaj możesz zmienić treść komunikatu.
</div>

<ol class="breadcrumb">
    <li><a href="#">Home</a></li>
    <li><a href="#">Komunikaty</a></li>
    <li class="active">Edycja</li>
</ol>

@using (Html.BeginForm("MessagesEdit", "Messages", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl }))
{

    <div class="form-group">
        <label for="id-komunikatu">ID komunikatu</label>
        <input type="text" class="form-control" id="id-komunikatu" placeholder="ID komunikatu" value="123456">
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.title)
        @Html.DisplayFor(m => m.title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.content)<br />
        @Html.TextAreaFor(m => m.content)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.departments)
        @Html.TextBoxFor(m => m.departments, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UserId)
        @Html.TextBoxFor(m => m.UserId, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="isImportant">Czy ważne?</label>
        <select id="isImportant" class="form-control">
            <option value="yes">Tak</option>
            <option value="no">Nie</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary btn-lg">Zapisz dane</button>
    <button type="reset" class="btn btn-default btn-lg">Wyczyść</button>
}
