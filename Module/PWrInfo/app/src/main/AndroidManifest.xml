<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.ziwg.pwrinfo">

    <!-- Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MessageActivity"
            android:label="@string/title_activity_message" />

        <intent-filter>
            <action android:name="android.intent.action.MESSAGE" />
        </intent-filter>

        <activity
            android:name=".InfoActivity"
            android:label="@string/title_activity_info" />
        <activity
            android:name=".EventActivity"
            android:label="@string/title_activity_event" />

        <intent-filter>
            <action android:name="android.intent.action.EVENT" />
        </intent-filter>

        <activity
            android:name=".LibraryActivity"
            android:label="@string/title_activity_library" />

        <intent-filter>
            <action android:name="android.intent.action.LIBRARY" />
        </intent-filter>

        <activity
            android:name=".MapActivity"
            android:label="@string/title_activity_map" />
        <activity
            android:name=".DeansOfficeActivity"
            android:label="@string/title_activity_deansOffice" />

        <intent-filter>
            <action android:name="android.intent.action.DEANSOFFICE" />
        </intent-filter>

        <activity
            android:name=".NotificationActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_notification"
            android:launchMode="singleTask"
            android:taskAffinity="" />
        <activity android:name=".GuideActivity"
            android:label="Przewodnik"/>
        <activity android:name=".GuideActivityTab1" />
        <activity android:name=".GuideActivityTab2" />
        <activity android:name=".GuideActivityTab3"></activity><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>